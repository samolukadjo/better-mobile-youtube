{
    "name": "better-mobile-youtube",
    "version": "0.0.2",
    "manifest_version": 2,
    "description": "Better mobile Youtube aims to provide better feature for mobile youtube on firefox ",
    "icons": {
        "16": "icon.png",
        "128": "icon.png"
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://m.youtube.com/*"
            ],
            "js": [
                "app.js"
            ],
            "run_at": "document_idle"
        }
    ]
}