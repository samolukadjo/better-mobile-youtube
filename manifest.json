{
    "name": "better-mobile-youtube",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Better mobile Youtube aims to provide better feature for mobile youtube on firefox ",
    "icons": {
        "16": "icon.jpg",
        "128": "icon.jpg"
    }
    "permissions": [
        "storage"
    ],
    "browser_action": {
        "default_popup": "options.html",
        "default_icon": {     "16": "icon.jpg",
        "128": "icon.jpg"   }
    },
    "content_scripts": [
        {
            "matches": [
                "*://m.youtube.com/*"
            ],
            "js": [
                "app.js"
            ],
            "run_at": "document_idle"
        }
    ]
}
